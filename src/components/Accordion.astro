---
export interface Props {
    summary: string;
    details: string[];
}

const { summary, details } = Astro.props;
---
<details class="group bg-periwinkle dark:bg-paynes-grey bg-opacity-25 rounded-lg">
    <summary class="cursor-pointer p-4 group-open:pb-0 dark:text-slate-300">{summary}</summary>
    <div class="px-4 pb-1">
        <ul role="list" class="marker:text-gunmetal dark:marker:text-slate-300">
            {details.map(detailItem => (
                <li>{detailItem}</li>
            ))}
        </ul>
    </div>
</details>
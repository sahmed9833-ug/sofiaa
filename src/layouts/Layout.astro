---
import "../styles/global.css";
import "../styles/animations.css";
import Header from "@components/base/Header.js";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const pageBounce = {
  old: {
    name: "bounce",
    duration: "0.4s",
    easing: "ease-linear",
    direction: "reverse",
  },
  new: {
    name: "bounce",
    duration: "0.4s",
    easing: "ease-out",
  },
};
const pageTransition = {
  forwards: pageBounce,
  backwards: pageBounce,
};
---

<!doctype html>
<html lang="en" class="html" transition:animate={pageTransition}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5569b9" />
    <meta name="msapplication-TileColor" content="#b7c3f3" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="theme-color"
      content="#F1F5F9"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#64748B"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="description" content={`${title} - Sofia.bio`} />
    <title>{title} - Sofia.bio ğŸ‘©ğŸ½â€ğŸ’»</title>
    <ClientRouter />
  </head>
  <body>
    <Header client:load />
    <main class="main">
      <h1 class="text-5xl sm:text-5xl text-center font-excalifont mb-4">
        {title}
      </h1>
      <slot />
    </main>
  </body>
</html>
